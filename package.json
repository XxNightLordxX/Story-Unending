{
  "name": "story-unending",
  "version": "1.0.0",
  "description": "Interactive narrative generation engine",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node server.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write &quot;js/**/*.js&quot;",
    "format:check": "prettier --check &quot;js/**/*.js&quot;",
    "lint:all": "npm run lint && npm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XxNightLordxX/Story-Unending.git"
  },
  "keywords": [
    "interactive-story",
    "narrative",
    "game"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@vitejs/plugin-legacy": "^7.2.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.8.1",
    "terser": "^5.46.0",
    "vite": "^7.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/**/node_modules/**",
      "!js/ui/keyboard-shortcuts.js",
      "!js/modules/directive.js",
      "!js/modules/donation.js",
      "!js/modules/reset-password.js",
      "!js/modules/misc.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jsdom)/)"
    ]
  },
  "dependencies": {
    "@sentry/browser": "^10.40.0",
    "fuse.js": "^7.1.0",
    "html2canvas": "^1.4.1"
  }
}
